<div class="modal" id="addLessonModal">
    <div class="add-student-container">
        <div class="header-modal-student">
            <h1>Add a Lesson</h1>
        </div>
        <div class="form-modal">
            <div class="form-group">
                <label for="topic">Topic:</label>
                <input id="topic" type="text" name="topic" />
            </div>
            <div class="form-group">
                <label for="content">Content:</label>
                <textarea id="content" type="text" name="content"></textarea>
            </div>
        </div>
        <div class="modal-student-input">
            <button class="form-button" id="add-lesson">Add Lesson</button>
            <span id="cancel-modal">Cancel</span>
        </div>
    </div>
</div>